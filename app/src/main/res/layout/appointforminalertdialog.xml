<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:textAlignment="center"
            android:id="@+id/appointdrname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/alerttextcolor"
            android:text="drName"/>
        <TextView
            android:textAlignment="center"
            android:id="@+id/appointdrspec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/alerttextcolor"
            android:layout_marginBottom="5dp"
            android:text="drSpec"/>

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:barrierDirection="top" />

        <CalendarView
            android:id="@+id/appointmentcalendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textAlignment="textStart"
            android:id="@+id/lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/alerttextcolor"
            android:text="Select Time"/>

        <Spinner
            android:id="@+id/timingspinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/times_of_appointments"
            android:padding="5dp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>